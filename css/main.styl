/* Variables */
transition-speed = all 0.2s linear
white = #fff
black = #000
color-principal = #ea8408
color-secundario = #c9163a
color-principal-2 = #ea8408
ccc = #ddd

@font-face {
  font-family: 'NeoSans';
  src: url('../fonts/neosansstd-regular-webfont.eot');
  src: url('../fonts/neosansstd-regular-webfont.eot?#iefix') format('embedded-opentype'), url('../fonts/neosansstd-regular-webfont.woff') format('woff'), url('../fonts/neosansstd-regular-webfont.ttf') format('truetype'), url('../fonts/neosansstd-regular-webfont.svg#NeoSansStdRegular') format('svg');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'NeoSans';
  src: url('../fonts/neosansstd-medium-webfont.eot');
  src: url('../fonts/neosansstd-medium-webfont.eot?#iefix') format('embedded-opentype'), url('../fonts/neosansstd-medium-webfont.woff') format('woff'), url('../fonts/neosansstd-medium-webfont.ttf') format('truetype'), url('../fonts/neosansstd-medium-webfont.svg#NeoSansStdMedium') format('svg');
  font-weight: bold;
  font-style: normal;
}


// Base setting of the app
h1,h2,h3,h4,h5,h6,p
	line-height: 1.45
	color #1e1e1e
	font-family: 'NeoSans', sans-serif;

h1
	font-size: 2.2em
h2
	font-size: 1.8em
h3
	font-size: 1.6em
h4
	font-size: 1.4em
h5
	font-size: 1.2em
h6
	font-size: 1.1em
p
	font-size: 1.1em
	color #474747
b
	font-weight bold !important
html
	overflow-x hidden!important
body
	background #f7f7f7
	font-family: 'NeoSans', sans-serif;
	font-size 20px
	overflow-x hidden!important
	color #1e1e1e
.wrapper
	width 90%
	margin 0 auto
	position relative
.clearfix
	clear both
.left
	float left
.right
	float right
small, .small
	font-size 90%
.button
	background color-principal-2
	border none
	color #FFF
	margin 0 auto
	display block
	height 46px
	text-align center
	line-height 46px
	font-size 19px
	width: 100%
.button:hover, .button:active
	color #FFF
	text-decoration none
.button:focus {
	background-color color-principal
	color #FFF
	text-decoration none
}

// Container
body .container:first-of-type
	padding-top 60px

body .slide .container:first-of-type
	padding-top 0

.container
	div.field
		padding 0 5px
	input[type="text"], input[type="password"], textarea
		width 100%
		padding 0 10px
		font-size 0.9em
		height 38px
		line-height 38px
		// font-style italic
		margin-bottom 5px
		-webkit-appearance none
		border-radius 0
		border 1px solid #999
		&:focus
			outline none
	::-webkit-input-placeholder /* WebKit browsers */
    	color #666

	:-moz-placeholder /* Mozilla Firefox 4 to 18 */
		color #666
	   	opacity 1

	::-moz-placeholder /* Mozilla Firefox 19+ */
	   	color #666
	   	opacity 1

	:-ms-input-placeholder /* Internet Explorer 10+ */
	   	color #666

// Login
body.login
	background black
	.container
		width 85%
		margin-top 17%
		padding-top 0
		.logo
			width 35%
			margin 0 auto
			margin-bottom 30px
		input
			margin-bottom -1px
		.button
			margin-top 25px
			background-color color-secundario
			&:focus, &:hover
				background-color #aa173a
		p
			font-size 1em
			margin-top 40px
			text-align center
			a
				color white
		.checkbox
			margin-top 10px
			label
				font-size 1em
				color white
			input
				line-height 14px


// Header +  off canvas
.navbar
	text-align center
	height 60px
	.navbar-brand
		float none
		display inline-block
		color white
		height 60px
		margin 0
		padding 20px 0
		margin-left -50px
		img
			height 30px
			margin-top -4px
	.menu
		height 60px
		width 50px
		float left
		a
			padding 15px
		img
			width 25px
			margin-top 18px
	.navbar-toggle
		float left
		margin-right 0
		border none
		padding 0 15px
		margin 0
		height 60px
		border-radius 0
		.icon-bar
			background-color white

.navbar-default
	background-color black
	border-bottom none

.navmenu-default
	background-color #505d65
	border-color #414c51
	.navmenu-nav
		margin-top 70px
		a
			line-height 25px
		li img
			width 25px
			margin-right 5px
			margin-top -3px
	.logout
		width 100%
		text-align center
		position absolute
		bottom 0
		a
			color #c9c9c9
			font-size 14px
			text-decoration underline


.navmenu-default .navmenu-nav > li > a, .navbar-default .navbar-offcanvas .navmenu-nav > li > a
	color white

.navbar-default .navbar-toggle:hover, .navbar-default .navbar-toggle:focus
	border none
	background-color #505d65


//  Second lvl navigation
body .container.second-nav
	padding 60px 0 0
	width 100%
	// padding 0 15px

.second-nav
	background-color #979797
	// position fixed
	ul
		margin 0
		padding 0
		height 40px
		li
			float left
			list-style none
			margin 0
			padding 0
			text-align center
			color #e2e2e2
			font-size 110%
			// padding 10px 0 0
			line-height 40px
			span
				padding 0 9px 5px
				border-bottom 6px solid #979797
		.active
			color white
			font-weight bold
			span
				border-color color-principal

.second-nav.two-element li
	width 50%

.second-nav.three-element li
	width 33.333333%

// Recover password
body.recover
	.container
		// padding-top 65px
		// margin-top 20px
		p, input
			margin-bottom 20px


#recorverPass
	.modal-content
		border-radius 0
		box-shadow 0 2px 5px rgba(0, 0, 0, .25)
	.modal-dialog
		width 80%
		margin 150px auto 0
		.close-modal
			width 100%
			padding 12px 0
			border none
			color white
			font-size 1em
			font-weight bold
			background-color color-principal
		p
			text-align center


// dashboard
@keyframes animatedBackground {
	from { background-position: 0 0; }
	to { background-position: 100% 0; }
}

body.dashboard
	width 100%
	background-color red
	background-image: url(../img/Fondo_LogosVTR.png);
	background-position: 0px 0px;
	background-repeat: repeat-x;
	-webkit-animation: animatedBackground 60s linear infinite;
	-ms-animation animatedBackground 60s linear infinite;
	-moz-animation animatedBackground 60s linear infinite;
	.container
		padding-top 0

#fix-to-bottom
	position absolute
	width 100%
	bottom 0
	background-color white
	padding-top 25px
	.today
		text-align center
		color #8c8c8c
		font-size 125%
		margin-top 14%

.loop-options
	border-top 1px solid #ddd
	border-right 1px solid #ddd
	margin-bottom 15%
	ul
		margin 0
		padding 0
		li
			width 33.33333%
			text-align center
			float left
			margin 0
			list-style none
			border 1px solid #ddd
			border-top none
			border-right none
			padding 15px 0
			&:focus, &:hover
				background-color ccc
			a
				color black
				display block
				font-size 85%
			img
				width 30%
				margin 0 auto 10px

// Icon setup
.icon
	height 55px
	width 55px
	background-position center
	background-repeat no-repeat
	border-radius 1000px
	background-size 32px

.icon.orange
	background-color #ff8300

.icon.house
	background-image url(../img/house.svg)
.icon.cellphone
	background-image url(../img/cellphone.svg)
.icon.talk
	background-image url(../img/talk.svg)
.icon.phone
	background-image url(../img/phone.svg)
.icon.data
	background-image url(../img/data.svg)
.icon.wifi
	background-image url(../img/wifi.svg)
.icon.account
	background-image url(../img/account.svg)
.icon.tv
	background-image url(../img/tv.svg)

// Detail accounts
.info-account, .user-detail
	margin-bottom 25px
	.date
		text-align right
		font-size 80%
		margin-top 10px
	.icon-container
		float left
		width 25%
		height 55px
	// Dropdown for a pay list
	.dropdown
		float left
		width 75%
		// overflow-x hidden
		h3
			// white-space nowrap
			font-weight bold
			margin 0
			padding 0
			font-size 100%
			line-height 1.4;
			padding 7px 20px 6px 8px
			border 1px solid color-principal
			background url(../img/arrow-down.svg) no-repeat 96% 50%
			background-size 15px
			span
				font-size 85%
			&:hover
				background-color white
		ul
			display none
			position absolute
			width 100%
			margin 0
			padding 0
			background white
			border 1px solid color-principal
			border-top none
			li
				padding 8px
				list-style none
				width 100%
				display block
				border-bottom 1px solid color-principal
				font-size 100%
				span
					font-size 90%
				&:last-child
					border-bottom none
				&:hover
					background-color ccc
	.dropdown.movil
		margin-top 8px
	.dropdown.whit-no-drop
		h3
			border none
			background none
			padding-right 8px
		ul li:hover
			background none

